<h1/>All Articles</h1>


  <% @articles.each do |article| %>
    
      <p/>
      <strong/><%= link_to article.title, article_path(article) %></strong>
      </p>
      <p/>
      <%= truncate(article.body, length: 140, seperator: '') %>
      </p>

  <% end %>

<%= link_to "Create a New Article", new_article_path, class: "new_article" %>
