<%= form_for(@article, html: {multipart: true}) do |f| %>
  

  <% @article.errors.full_messages.each do |error| %>
  
    <%= error %>

  <% end %>

  <%= f.label :title %><br/>
  <%= f.text_area :title, cols: 40, rows: 1 %>
  <p>
  <%= f.label :body %><br/>
  <%= f.text_area :body, cols: 40, rows: 7 %>
  <p>
  <%= f.label :tag_list %><br/>
  <%= f.text_field :tag_list %>
  <p>
  <%= f.label :image, "Attach an Image" %>
  <p>
  <% if @article.image.exists? %>
      <%= image_tag @article.image.url %>

  <% end %>
  <%= f.label :image, "Attach a New Image" %>

  <%= f.file_field :image %>

  <p>
  <%= f.submit %>| <%= link_to "Cancel", articles_path %>



<% end %>
